                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-4.608-3.08a1 1 0 00-1.561.818v6.156a1 1 0 001.561.818l4.608-3.08a1 1 0 000-1.632z" />
                    </svg>
                </button>
                <button type="button" id="pause-button" class="button button--pause">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 5H10V19H14V5Z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18 5H22V19H18V5Z" />
                    </svg>                                      
